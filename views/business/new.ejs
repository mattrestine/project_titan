<% include ../partials/header %>
    <% include ../partials/nav %>
        <div class='container'>
            <div id="newBusinessHeader">
                <h2>Register A New Business</h2>
                <p>Add business to gain new customer/client and interact with current customers/clients</p>
            </div>
            <div id='newBusinessForm'>
                <form action='/business' method='POST'>
                    <div class='form-group'>
                        <label for='busName'>Name of Business</label>
                        <input class='form-control' id='busName' type='text' name='bname' placeholder='Business Name'>
                    </div>
                    <div class='form-group'>
                        <label for='busLogo'>Logo (use external image link)</label>
                        <input class='form-control' id='busLogo' type='text' name='logo' placeholder='https://linktoimage.com/image.jpg'>
                    </div>
                    <div class='form-group'>
                        <label for='busAddress'>Business Website</label>
                        <input class='form-control' id='busURL' type='text' name='url' placeholder='https://linktowebsite.com/'>
                    </div>
                    <div class='form-group'>
                        <label for='busAddress'>Business Street Address</label>
                        <input class='form-control' id='busAddress' type='text' name='street' placeholder='123 Main Street'>
                    </div>
                    <div class='form-group'>
                        <label for='busAddress'>Business City</label>
                        <input class='form-control' id='busAddress' type='text' name='city' placeholder='City'>
                    </div>
                    <div class='form-group'>
                        <label for='busAddress'>Business State</label>
                        <input class='form-control' id='busAddress' type='text' name='state' placeholder='State i.e. TX, MD, FL' maxlength="2">
                    </div>
                    <div class='form-group'>
                        <label for='busAddress'>Business Zip</label>
                        <input class='form-control' id='busAddress' type='text' name='zipcode' placeholder='Zipcode i.e. 12345' maxlength="5">
                    </div>
                    
                    <div class='form-group'>
                        <label for='busImage'>Image 1</label>
                        <input class='form-control' id='busImage' type='text' name='img1' placeholder='https://linktoimage.com/image.jpg'>
                    </div>
                   
                    <div class='form-group'>
                        <label for='busVideo'>YouTube Video</label>
                        <input class='form-control' id='busVideo' type='text' name='video' placeholder='https://youtube.com/id'>
                    </div>
                    <div class='form-group'>
                        <label for='busDesc'>Business Description</label>
                        <textarea class="form-control" rows="3" name='desc'>Business Description</textarea>
                    </div>
                    <button class='btn btn-success'>Register</button>
                </form>
            </div>
        </div>
<% include ../partials/footer %>