<% include ../partials/header %>
<% include ../partials/nav %>
    <div class='container'>
        <div id="editBusinessHeader">
            <h2>Edit Business Information</h2>
        </div>
        <div id='editBusinessForm'>
            <form action='/business/<%= data._id %>?_method=PUT' method='POST'>
                <div class='form-group'>
                    <label for='busName'>Name of Business</label>
                    <input class='form-control' id='busName' type='text' name='data[bname]' value='<%= data.bname %>' >
                </div>
                <div class='form-group'>
                    <label for='busLogo'>Logo (use external image link)</label>
                    <input class='form-control' id='busLogo' type='text' name='data[logo]' value='<%= data.logo %>'>
                </div>
                <div class='form-group'>
                    <label for='busURL'>Business Website</label>
                    <input class='form-control' id='busURL' type='text' name='data[url]' value='<%= data.url %>'>
                </div>
                <div class='form-group'>
                    <label for='busAddress'>Business Street Address</label>
                    <input class='form-control' id='busAddress' type='text' name='data[address.street]' value='<%= data.address.street %>'>
                </div>
                <div class='form-group'>
                    <label for='busAddress'>Business City</label>
                    <input class='form-control' id='busAddress' type='text' name='data[address.city]' value='<%= data.address.city %>'>
                </div>
                <div class='form-group'>
                    <label for='busAddress'>Business State</label>
                    <input class='form-control' id='busAddress' type='text' name='data[address.state]' value='<%= data.address.state %>' maxlength="2">
                </div>
                <div class='form-group'>
                    <label for='busAddress'>Business Zipcose</label>
                    <input class='form-control' id='busAddress' type='text' name='data[address.zipcode]' value='<%= data.address.zipcode %>' maxlength="5">
                </div>
                <div class='form-group'>
                    <label for='busVideo'>Image 1</label>
                    <input class='form-control' id='busVideo' type='text' name='data[images.img1]' value='<%= data.images.img1 %>'>
                </div>
    
                <div class='form-group'>
                    <label for='busVideo'>YouTube Video</label>
                    <input class='form-control' id='busVideo' type='text' name='data[video]' value='<%= data.video %>'>
                </div>
                
                <div class='form-group'>
                    <label for='busDesc'>Business Descripton</label>
                    <textarea class="form-control" rows="3" name='data[desc]'><%= data.desc %></textarea>
                </div>
                <button class='btn btn-success'>Update Your Info</button>
            </form>
        </div>
    </div>
      
<% include ../partials/footer %>