<% include ../partials/header %>
<% include ../partials/nav %>
    <div class='container'>
        <div id="editBusinessHeader">
            <h2>Edit Business Information</h2>
        </div>
        <div id='editBusinessForm'>
            <form action='/business/<%= data._id %>?_method=PUT' method='POST'>
                <div class='form-group'>
                    <label for='busName'>Name of Business</label>
                    <input class='form-control' id='busName' type='text' name='bname' value='<%= data.bname %>' >
                </div>
                <div class='form-group'>
                    <label for='busLogo'>Logo (use external image link)</label>
                    <input class='form-control' id='busLogo' type='text' name='logo' value='<%= data.logo %>'>
                </div>
                <div class='form-group'>
                    <label for='busVideo'>YouTube Video</label>
                    <input class='form-control' id='busVideo' type='text' name='video' value='<%= data.video %>'>
                </div>
                <div class='form-group'>
                    <label for='busURL'>Business Website</label>
                    <input class='form-control' id='busURL' type='text' name='url' value='<%= data.url %>'>
                </div>
                <div class='form-group'>
                    <label for='busDesc'>Business Website</label>
                    <textarea class="form-control" rows="3" name='desc'><%= data.desc %></textarea>
                </div>
                <button class='btn btn-success'>Update Your Info</button>
            </form>
        </div>
    </div>
      
<% include ../partials/footer %>